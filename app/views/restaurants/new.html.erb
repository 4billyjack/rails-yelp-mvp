<div class="container w-50 mt-5">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
    </div>

    <%= f.submit "Add a Resto", class: "btn btn-primary" %>
  <% end %>
</div>
